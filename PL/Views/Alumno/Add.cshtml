@model ML.Alumnos
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Agregar nuevo alumno</h2>

@using (Html.BeginForm("Add", "Alumno", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.IdAlumno)

    <div class="row">

        <div class="col-md-3">
            @Html.LabelFor(model => model.Nombre, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.Nombre, new { @class = "coll-auto", onkeypress = "return validarLetras(event,'lblNombre')" } )
            <label id="lblNombre" style="color: #ff0000"></label>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.ApellidoPaterno, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "coll-auto", onkeypress = "return validarLetras(event,'lblApellidoP')" })
            <label id="lblApellidoP" style="color: #ff0000"></label>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.ApellidoMaterno, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "coll-auto", onkeypress = "return validarLetras(event,'lblApellidoM')" })
            <label id="lblApellidoM" style="color: #ff0000"></label>
        </div>

    </div>

    <hr />

    <div class="row">

        <div class="col-md-3">
            <input type="submit" data-toggle="modal" class="btn btn-success" value="Guardar" />
        </div>

        <div class="col-md-3">
            <a class="btn btn-danger" href="@Url.Action("GetAll","Alumno")">Regresar</a>
        </div>

    </div>
}

<script type="text/javascript">

    function validarLetras(e, lbl) {
        var key = e.keyCode;
        if ((key >= 65 && key <= 90) || key == 8 || (key >= 97 && key <= 122)) {
            $('#' + lbl).text('');
            return true;
        }
        else {
            $('#' + lbl).text('Solo se aceptan letras');
            $('#' + lbl).css('color', 'red');

            return false;
        }
    }

</script>

